<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_file_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:measureAllChildren="true"
    android:foregroundGravity="center_vertical"
    android:alpha="0.4"
    card_view:cardCornerRadius="8dp"

    android:layout_margin="0.02dp"
    card_view:contentPadding="0.02dp"

    card_view:cardElevation="0.02dp"
    card_view:cardMaxElevation="0.02dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:padding="5dp"
        card_view:cardCornerRadius="8dp"
        >
        <!--android:background="@drawable/background_list_item"-->

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/filename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Nombre"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:elegantTextHeight="false"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/filepath"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Url"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="false"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="false"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:visibility="invisible"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>